<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--  button categories style  -->

    <style name="ButtonCategories" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/btn</item>
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">35dp</item>
    </style>

    <style name="ButtonShowMore" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/btn</item>
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">35dp</item>
    </style>

</resources>